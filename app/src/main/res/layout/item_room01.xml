<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="80dp">
    <TextView
        android:id="@+id/room_item_title"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:text="中信城 南北通透 4居室 户型方正 环境优美 交通便利 西城"
        android:textSize="16sp"
        android:gravity="center|left"
        android:maxLines="1"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/room_item_room"
            android:padding="5dp"
            android:background="@drawable/miaobian_huise1"
            android:layout_width="wrap_content"
            android:text="户型:4室"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_height="match_parent" />
        <TextView
            android:background="@drawable/miaobian_huise1"
            android:id="@+id/room_item_value"
            android:padding="5dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="价格:2650 万元"
            android:gravity="center"
            android:layout_height="match_parent" />
        <TextView
            android:background="@drawable/miaobian_huise1"
            android:id="@+id/room_item_time"
            android:padding="5dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="时间:49分钟前"
            android:gravity="center"
            android:layout_height="match_parent" />

    </LinearLayout>




</LinearLayout>
